{
  "rules": {
    "curly": [
      2,
      "all"
    ],
    "operator-linebreak": [
      2,
      "after"
    ],
    "max-len": [
      2,
      80
    ],
    "indent": [
      2,
      4,
      {
        "SwitchCase": 1
      }
    ],
    "camelcase": [ "off", {"properties": "never" } ],
    "quotes": [ "off", "single", { "avoidEscape": true } ],
    "no-multi-str": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-trailing-spaces": 2,
    "space-unary-ops": [
      2,
      {
        "words": true,
        "nonwords": true,
        "overrides": {
          "++": false,
          "--": false
        }
      }
    ],
    "one-var": [
      2,
      "never"
    ],
    "brace-style": [
      2,
      "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "keyword-spacing": [
      2,
      {}
    ],
    "space-infix-ops": 2,
    "space-before-blocks": [
      2,
      "always"
    ],
    "eol-last": 2,
    "space-before-function-paren": [
      2,
      "never"
    ],
    "array-bracket-spacing": [
      2,
      "never",
      {
        "singleValue": true
      }
    ],
    "space-in-parens": [
      2,
      "never"
    ],
    "no-multiple-empty-lines": 2
  }
}
